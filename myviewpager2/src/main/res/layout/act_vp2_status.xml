<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_fragment_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment 添加操作"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_fragment_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment 移除操作"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_fragment_replace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment 替换列表"
                android:textAllCaps="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D5C0F7"
        app:tabMode="scrollable" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>